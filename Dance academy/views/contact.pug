extends base.pug

block scripts
    script(src="../views/static/index.js")
block style    
    style
       include ../static/style.css
       include ../static/contactstyle.css

       
block content
    div.container
        h1 Contact Us  
        form(action="/contact",method="post",class="myForm") 
            input(type="text",class="myInput",name="name",placeholder="Enter Your Name") 
            input(type="text",class="myInput",name="phoneNumber",placeholder="Enter Your Phone Number")  
            input(type="email",class="myInput",name="emailID",placeholder="Enter Your Email ID")  
            input(type="text",class="myInput",name="address",placeholder="Enter Your address")  
            input(type="text",class="myInput",name="concern",placeholder="Enter Your Concern")  
            button.btn Submit